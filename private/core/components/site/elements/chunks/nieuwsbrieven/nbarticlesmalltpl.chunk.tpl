<!-- Start artikelen klein -->
<tr>
    <td align="center" valign="top" class="pad10">
        <table cellpadding="0" cellspacing="0" border="0" width="100%">
            <tr>
                <td align="center" valign="top" class="half">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        [[+image:notempty=`
                        <tr>
                            <td align="center" width="250">
                            [[+link:neq=``:then=`
                                <a href="[[+link]]" target="_blank"><img src="[[++siteurl]][[+image]]" alt="[[+title]]" border="0" style="margin:0;" width="300"/></a>
                            `:else=`
                                <img src="[[++siteurl]][[+image]]" alt="[[+title]]" border="0" style="margin:0;" width="300"/>
                            `]]
                            </td>
                        </tr>
                        `]]
                        <tr>
                            <td style="padding: 20px;" class="pad10">
                                <table>
                                    [[+title:notempty=`
                                    <tr>
                                        <td align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:23px; line-height:30px; color:#333333; font-weight:normal;">[[+title]]</td>
                                    </tr>
                                    `]]
                                    <tr><td height="15"></td></tr>
                                    [[+text:notempty=`
                                    <tr>
                                        <td align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:19px; color:#333333; text-align:left;">[[+text]]</td>
                                    </tr>
                                    `]]
                                    <tr><td height="15"></td></tr>
                                    [[+linktext:notempty=`
                                    <tr>
                                        <td align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:19px; color:#333333; text-align:left;">
                                        [[+link:notempty=`
                                            <table cellpadding="0" cellspacing="0" border="0">
                                                <tbody>
                                                <tr>
                                                    <td bgcolor="[[+colorselect]]" align="center" style="font-family:Arial, Helvetica, sans-serif; color:#FFFFFF; font-size:13px;padding:8px 20px;"><a href="[[+link]]" target="_blank" style="color:#FFFFFF; text-decoration:none;">[[+linktext]]</a></td>
                                                </tr>
                                                </tbody>
                                            </table>`]]
                                        </td>
                                    </tr>
                                    `]]
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="24" class="h25"></td>
                <td align="center" valign="top" class="half">
                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                [[+image2:notempty=`
                    <tr>
                        <td align="center" width="250">
                        [[+link2:neq=``:then=`
                            <a href="[[+link2]]" target="_blank"><img src="[[++siteurl]][[+image2]]" alt="[[+title2]]" border="0" style="margin:0;" width="300"/></a>
                        `:else=`
                            <img src="[[++siteurl]][[+image2]]" alt="[[+title2]]" border="0" style="margin:0;" width="300"/>
                        `]]
                        </td>
                    </tr>
                `]]
                <tr>
                    <td style="padding: 20px;" class="pad10">
                        <table>
                        [[+title2:notempty=`
                            <tr>
                                <td align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:23px; line-height:30px; color:#333333; font-weight:normal;">[[+title2]]</td>
                            </tr>
                        `]]
                        <tr><td height="15"></td></tr>
                        [[+text2:notempty=`
                        <tr>
                            <td align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:19px; color:#333333; text-align:left;">[[+text2]]</td>
                        </tr>
                        `]]
                        <tr><td height="15"></td></tr>
                        [[+linktext2:notempty=`
                        <tr>
                            <td align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:19px; color:#333333; text-align:left;">

                            [[+link2:notempty=`
                            <table cellpadding="0" cellspacing="0" border="0">
                                <tbody>
                                <tr>
                                    <td bgcolor="[[+colorselect2]]" align="center" style="font-family:Arial, Helvetica, sans-serif; color:#FFFFFF; font-size:13px;padding:8px 20px;"><a href="[[+link2]]" target="_blank" style="color:#FFFFFF; text-decoration:none;">[[+linktext2]]</a></td>
                                </tr>
                                </tbody>
                            </table>`]]

                            </td>
                        </tr>
                       `]]
                        </table>
                     </td>
                    </tr>
                </table>
                </td>
            </tr>
        </table>
    </td>
</tr>
<!-- Eind artikelen klein -->